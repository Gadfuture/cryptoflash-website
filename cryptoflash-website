  <script>
    function startSimulation() {
      const timer = document.getElementById('timer');
      timer.style.display = 'block';
      timer.innerText = 'Simulating Flash USDT...';
      setTimeout(() => {
        timer.innerText = 'Flash USDT Generation Complete!';
      }, 5000);
    }

    const ctx = document.getElementById('priceChart').getContext('2d');
    const chart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['1am', '3am', '5am', '7am', '9am'],
        datasets: [{
          label: 'BTC Price ($)',
          data: [31000, 31200, 31500, 31300, 31750],
          borderColor: 'cyan',
          tension: 0.4
        }]
      },
      options: {
        scales: {
          y: { beginAtZero: false }
        }
      }
    });
  </script>
